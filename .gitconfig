[color]
        ui = always
        branch = always
        diff = always
        interactive = always
        status = always
        grep = always
        pager = true
        decorate = always
        showbranch = always
[grep]
        lineNumber = true
[log]
        decorate = full
[status]
      showUntrackedFiles = all
      # Sometimes a newly-added folder, since it's only one line in git status, can slip under the radar.
      # https://git-scm.com/docs/git-config#git-config-statusshowUntrackedFiles
[include]
        path = ~/.private/private.gitconfig
