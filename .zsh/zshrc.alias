# pager mysql
mysqll(){
    local mysql_pager
    if [ $(which grcat 2> /dev/null ) ] && [ -f "$HOME/.grc/conf.mysql" ] ;then
        mysql_pager="grcat $HOME/.grc/conf.mysql | less -iMSx4 -FX -R"
    else
        mysql_pager="less -S-n -i -F -X"
    fi
    mysql $@ --pager=$mysql_pager
}
